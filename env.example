# API Configuration
REACT_APP_API_URL=http://localhost:8000/api

# Laravel Reverb WebSocket Configuration
# For LOCAL development (self-hosted Reverb):
REACT_APP_REVERB_APP_KEY=local
REACT_APP_REVERB_HOST=localhost
REACT_APP_REVERB_PORT=8080
REACT_APP_REVERB_SCHEME=ws

# For PRODUCTION (Laravel Cloud managed Reverb):
# Only set REACT_APP_REVERB_APP_KEY - Laravel Cloud handles the endpoint automatically
# DO NOT set REACT_APP_REVERB_HOST, REACT_APP_REVERB_PORT, or REACT_APP_REVERB_SCHEME in production
# REACT_APP_REVERB_APP_KEY=your-laravel-cloud-reverb-key

# App Configuration
REACT_APP_NAME="Chat App"
REACT_APP_VERSION=1.0.0 